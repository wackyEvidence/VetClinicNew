                </tr>
            </thead>
            <tbody>
                @*@foreach (var report in Model)
                {
                    <tr>
                        <td hidden>@report.Id</td>
                        <td>@report.RegistrationNumber</td>
                        <td>@report.Location.Name</td>
                        <td>@report.AnimalCategory.Name</td>
